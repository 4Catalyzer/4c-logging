{
  "name": "@4c/logging",
  "version": "0.4.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/4c-logging"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "lint": "eslint . && prettier --list-different --ignore-path .ignore '**/*.{json,css,md}'",
    "format": "eslint . --fix && prettier --write --ignore-path .eslintignore '**/*.{json,css,md}'",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "release": {
    "extends": [
      "@4c/semantic-release-config"
    ]
  },
  "devDependencies": {
    "@4c/semantic-release-config": "^2.0.3",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-config-4catalyzer": "^1.0.1",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^2.7.0",
    "husky": "^3.1.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.19.1",
    "semantic-release": "^15.13.31"
  },
  "dependencies": {
    "@4c/env": "^1.2.0",
    "lodash": "^4.17.10",
    "winston": "^3.0.0"
  }
}
